{
  "include": ["code/**/*"],
  "compilerOptions": {
    "strict": true,
    "outDir": "lib",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "declaration": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "maxNodeModuleJsDepth": 2
  }
}
